<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Button" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Notifications"
                android:drawableStart="@drawable/ic_baseline_notifications_24"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:drawableLeft="@drawable/ic_baseline_notifications_24" />

            <View
                style="@style/Divider"
                android:layout_marginVertical="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#f9f9f9"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingHorizontal="20dp"
                    android:text="No notifications."
                    android:gravity="center" />
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Favorites"
                android:drawableStart="@drawable/ic_baseline_favorite_24"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:drawableLeft="@drawable/ic_baseline_favorite_24" />
            <View
                style="@style/Divider"
                android:layout_marginVertical="8dp"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <include
                        layout="@layout/favorite_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <include
                        layout="@layout/favorite_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <include
                        layout="@layout/favorite_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </HorizontalScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Today's schedule"
                android:drawableStart="@drawable/ic_baseline_today_24"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:drawableLeft="@drawable/ic_baseline_today_24" />

            <View
                style="@style/Divider"
                android:layout_marginVertical="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#f9f9f9"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingHorizontal="20dp"
                    android:text="No routines planned for today."
                    android:gravity="center" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Notifications"
                android:drawableStart="@drawable/ic_baseline_notifications_24"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:drawableLeft="@drawable/ic_baseline_notifications_24" />

            <View
                style="@style/Divider"
                android:layout_marginVertical="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#f9f9f9"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingHorizontal="20dp"
                    android:text="No notifications."
                    android:gravity="center" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>