<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/routine_edit_appbar"
            app:navigationIcon="@drawable/ic_baseline_close_24"
            app:title="">

            <EditText
                android:id="@+id/textField"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your routine name"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="#ccc"
                android:textSize="20sp"
                android:textStyle="bold"

                app:hintAnimationEnabled="false" />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="monospace"
                android:text="03:15"
                android:textSize="64sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Repeat"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <View
                style="@style/Divider"
                android:layout_marginVertical="8dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView2"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="2dp"
                    android:backgroundTint="#f9f9f9"
                    android:clickable="true"
                    android:minWidth="48dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/materialCardView"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Mon" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="2dp"
                    android:backgroundTint="#f9f9f9"
                    android:clickable="true"
                    android:minWidth="48dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/materialCardView3"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView2"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Tue" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView3"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="2dp"
                    android:backgroundTint="#f9f9f9"
                    android:clickable="true"
                    android:minWidth="48dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/materialCardView4"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Wed" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView4"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="2dp"
                    android:backgroundTint="#f9f9f9"
                    android:clickable="true"
                    android:minWidth="48dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/materialCardView5"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView3"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Thu" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView5"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="2dp"
                    android:backgroundTint="#f9f9f9"
                    android:clickable="true"
                    android:minWidth="48dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/materialCardView6"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView4"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Fri" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView6"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="2dp"
                    android:backgroundTint="#f9f9f9"
                    android:clickable="true"
                    android:minWidth="48dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/materialCardView7"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView5"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Sat" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView7"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="2dp"
                    android:backgroundTint="#f9f9f9"
                    android:clickable="true"
                    android:minWidth="48dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView6"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Sun" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical">


            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Rooms"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <View
                style="@style/Divider"
                android:layout_marginVertical="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_map_base" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>